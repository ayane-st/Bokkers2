<div class="container px-5 px-sm-0">
  <div><%= flash[:notice] %></div>
  <div class="row">
    <div class="col-md-3">
      <%= render 'user_info', user: current_user %>
      <div class="row">
        <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block edit_user" do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>
      <%= render 'books/new_book', book: @book %>
    </div>
  <div class="col-md-8 offset-md-1">
    <h1>Users</h1>
    <table class="table">
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th></th>
      </tr>
      <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(100,100) %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user.id) %></td>
      </tr>
      <% end %>
    </table>
  </div>
