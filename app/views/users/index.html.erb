<div>
  <h1>User info</h1>
  <%= image_tag @user.get_profile_image(100,100) %>
  <%= @user.name %>
  <%= @user.introduction %>
</div>


<div>
  <h1>new Book</h1>
  <%= form_with model: @book do |f| %>
    <div class="field">
      <label>Title</label><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <label>Opinion</label><br>
      <%= f.text_area :body %>
    </div>
    <%= f.submit 'Create Book' %>
  <% end %>
</div>


<div>
  <h1>Users</h1>
  <table>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th></th>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image(100,100) %></td>
      <td><%= user.name %></td>
      <td><%= link_to "Show", user_path(user.id) %></td>
    </tr>
    <% end %>
  </table>
