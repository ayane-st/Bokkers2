<% if @book.user == current_user %>
  <%= render 'users/user_info', user: current_user %>
<% else %>
  <%= render 'users/user_info', user: @book.user %>
<% end %>

<%= render 'new_book', book: @new_book %>

<h1>Book detail</h1>
  <table>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
      <th></th>
    </tr>
    <tr>
      <td>
        <%= image_tag @book.user.get_profile_image(100,100) %><br>
        <%= @book.user.name %>
      </td>
      <td>
        <%= link_to book_path(@book.id) do %>
          <%= @book.title %>
        <% end %>
      </td>
      <td><%= @book.body %></td>
      <% if @book.user == current_user %>
        <td><%= link_to "edit", edit_book_path(@book) %></td>
        <td><%= link_to "destroy", book_path(@book), method: :delete,"data-confirm" =>"本当に削除しますか？" %></td>
      <% else %>
        <td></td>
        <td></td>
      <% end %>
    </tr>
  </table>
