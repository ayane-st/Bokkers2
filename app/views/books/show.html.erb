<div class="container px-5 px-sm-0">
  <div><%= flash[:notice] %></div>
  <div class="row">
    <div class="col-md-3">
      <% if @book.user == current_user %>
        <%= render 'users/user_info', user: current_user %>
        <div class="row">
          <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block edit_user" do %>
            <i class="fa-solid fa-user-gear"></i>
          <% end %>
        </div>
      <% else %>
        <%= render 'users/user_info', user: @book.user %>
        <div class="row">
          <%= link_to user_path(current_user.id), class: "btn btn-outline-secondary btn-block edit_user" do %>
            <i class="fa-solid fa-user-gear"></i>
          <% end %>
        </div>
      <% end %>
      <%= render 'new_book', book: @new_book %>
    </div>
  <div class="col-md-8 offset-md-1">
    <h1>Book detail</h1>
      <table class="table table-hover table-inverse">
      <tr>
        <td>
          <%= image_tag @book.user.get_profile_image(100,100) %><br>
          <%= link_to user_path(@book.user.id) do %>
            <%= @book.user.name %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(@book.id) do %>
            <%= @book.title %>
          <% end %>
        </td>
        <td><%= @book.body %></td>
        <td></td>
        <td></td>
        <% if @book.user == current_user %>
          <td><%= link_to "edit", edit_book_path(@book) %></td>
          <td><%= link_to "destroy", book_path(@book), method: :delete,"data-confirm" =>"本当に削除しますか？" %></td>
        <% end %>
      </tr>
    </table>
  </div>
