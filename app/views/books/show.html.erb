<h1>Books#show</h1>
  <%= form_with model: @new_book do |f| %>
    <div class="field">
      <label>Title</label><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <label>Opinion</label><br>
      <%= f.text_area :body %>
    </div>
    <%= f.submit 'Create Book' %>
  <% end %>

<h1>Books</h1>
    <% if @book.user == current_user %>
      <table>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th></th>
          <th></th>
        </tr>
        <tr>
          <td><%= @book.user.name %></td>
          <td>
            <%= link_to book_path(@book.id) do %>
              <%= @book.title %>
            <% end %>
          </td>
          <td><%= @book.body %></td>
          <td><%= link_to "edit", edit_book_path(@book) %></td>
          <td><%= link_to "destroy", book_path(@book), method: :delete,"data-confirm" =>"本当に削除しますか？" %></td>
        </tr>
      </table>
    <% else %>
      <table>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <tr>
          <td><%= @book.user.name %></td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
        </tr>
      </table>
    <% end %>
<p>Find me in app/views/books/show.html.erb</p>
